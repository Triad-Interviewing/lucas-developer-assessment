{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": ["es2015"],
      "strict": true,
      "declaration": true,
      "outDir": "dist",
      "sourceMap": true,
      /* The following support more verbose data module testing */
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
    },
    "include": ["src/**/*", "__tests__/models"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }